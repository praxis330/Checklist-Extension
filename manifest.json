{
  "name": "Checklist Extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Handy checklist",
  "browser_action": {
  	"default_title": "Checklist",
  	"default_popup": "main.html"
  },
  "background": {
  	"scripts": ["js/app/background.js"]
  },
  "permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
  	"16": "img/icon_16x16.png",
  	"48": "img/icon_48x48.png",
  	"128": "img/icon_128x128.png"
  }
}
